<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import com.jfoenix.controls.JFXButton?>
<StackPane fx:id="customer_Stackpane" prefHeight="600.0" prefWidth="1100.0" stylesheets="@Cssfile.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ViewReportController">
   <children>
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="View Customer Transaction">
              <content>
              <VBox prefHeight="-Infinity">
                  <children>
                      <HBox alignment="CENTER_RIGHT" prefHeight="30.0" spacing="5">
                          <padding><Insets right="10" /></padding>
                          <Label text="Enter Loan Id :" />
                          <TextField fx:id="searchTxt" />
                          <JFXButton buttonType="RAISED" ripplerFill="aliceblue" style="-fx-background-color: #558C89;" fx:id="searchBtn" onAction="#Search_Customer" text="View" textFill="white"/>
                          <Button fx:id="printDetails" onAction="#PrintDetails" style="-fx-background-color: #554640; -fx-alignment: center-right;" text="Print Details" textFill="White" />
                      </HBox>
                  <TableView fx:id="Customer_transaction" prefWidth="200.0" style="-fx-text-alignment: center" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="loan_id" prefWidth="95.0" text="Loan#" />
                        <TableColumn fx:id="full_name" prefWidth="115.0" text="Full Name" />
                        <TableColumn fx:id="sno" prefWidth="95.0" text="S/N" />
                        <TableColumn fx:id="amount" prefWidth="95.0" text="Amount" />
                        <TableColumn fx:id="date_transaction" prefWidth="105.0" text="Transaction Date" />
                    </columns>
                  </TableView>
                  </children>
              </VBox>
              </content>

          </Tab>
          <Tab fx:id="AmountStatistics" text="Loan Released-Month ">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <BarChart fx:id="borrowerChart" layoutX="14.0" layoutY="70.0" prefHeight="400.0" prefWidth="992.0">
                          <xAxis>
                            <CategoryAxis fx:id="category_Axis" side="BOTTOM" />
                          </xAxis>
                          <yAxis>
                            <NumberAxis fx:id="Number_Axis" side="LEFT" />
                          </yAxis>
                        </BarChart>
                     </children></AnchorPane>
            </content>
          </Tab>
            <Tab fx:id="RepaymentStatistics" text="Repayment Collected-Month">
                <content>
                    <AnchorPane fx:id="RepayPane" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <children>

                        <BarChart fx:id="RepaymentChart" layoutX="16.0" layoutY="66.0" prefHeight="400.0" prefWidth="1054.0">
                            <xAxis>
                                <CategoryAxis fx:id="catego_Axis" side="BOTTOM" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis fx:id="Numb_Axis" side="LEFT" />
                            </yAxis>
                        </BarChart>
                        <Button fx:id="repayBtn" layoutX="88.0" layoutY="25.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="126.0" style="-fx-background-color: blue;" text="PRINT REPORT" textFill="#f2efef" />
                    </children>
                    </AnchorPane>
                </content>
            </Tab>
            <Tab fx:id="CustomerStatistics" text="Customer Registered per Month">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <BarChart layoutX="30.0" layoutY="40.0" prefHeight="463.0" prefWidth="804.0">
                          <xAxis>
                            <CategoryAxis side="BOTTOM" />
                          </xAxis>
                          <yAxis>
                            <NumberAxis side="LEFT" />
                          </yAxis>
                        </BarChart>
                     </children></AnchorPane>
              </content>
            </Tab>
            <Tab text="Loans Registered per Month" fx:id="LoansRegisteredStatistics">
                <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <BarChart layoutX="66.0"  layoutY="67.0" legendVisible="true" prefHeight="400.0" prefWidth="703.0" fx:id="LoansRegisteredChart">
                          <xAxis>
                            <CategoryAxis side="BOTTOM" fx:id="category_Aix" />
                          </xAxis>
                          <yAxis>
                            <NumberAxis side="LEFT" fx:id="number_Ax"/>
                          </yAxis>
                        </BarChart>
                     </children></AnchorPane>
                </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</StackPane>
