<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.DatePicker?>
<GridPane fx:id="reg" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" hgap="10" vgap="10" fx:controller="sample.RepaymentFormController">
    <padding><Insets bottom="25" left="25" right="25" top="25" /></padding>

    <Text fill="#574e4e" text="Repayment Form" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
        <font>
            <Font name="Arial Black" size="20.0" />
        </font>
    </Text>

    <Label text="Loan Id:" GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <TextField fx:id="repay_loanId" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="1" editable="false"/>

    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <TextField fx:id="repay_name" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="2" editable="false"/>

    <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="3" />

    <DatePicker fx:id="date" GridPane.columnIndex="1" GridPane.rowIndex="3" focusTraversable="true"/>

    <Label text="Amount:" GridPane.columnIndex="0" GridPane.rowIndex="4" />

    <TextField fx:id="amount" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <HBox alignment="BOTTOM_CENTER" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="5">
        <Button fx:id="submitBtn" text="Submit" onAction="#submitPayment"/>
    </HBox>
</GridPane>